@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Base.cshtml";
}

@section body
{
    @{
        IPublishedContent nodeRoot = Model.Content.GetPropertyValue("identifier").ToString() != "homePorra" ? Model.Content.Parent : Model.Content;
        IEnumerable<IPublishedContent> children = nodeRoot.Children;
 }
    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@nodeRoot.Url()">Porra de l'espardenya</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        @foreach (IPublishedContent node in children)
                        { 

                            <li class="page-scroll">
                                <a href="@node.Url()">@node.Name</a>
                            </li>
                    
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <p>Porra website</p>
    <div id="content">
        @RenderSection("bodyContent")
    </div>
}
